<%= link_to "Back to All Users", admin_users_path %><br \>
<%= link_to "Back to All Movies", movies_path %><br \>
<%= link_to "Create New User", new_admin_user_path %><br \>

<h1> User's Profile</h1>

<h2><%= @user.full_name %> (<%= link_to "Edit", edit_admin_user_path(@user) %>, <%= link_to "Delete", admin_user_path(@user), method: :delete, confirm: "Are You sure?" %>)</h2>
<h2> Email: <%= @user.email %></h2>
<h2> Administrator: <%= @user.admin %></h2>
<h2> Movie Reviews </h2>
<% if @user_reviews %>
  <% @user_reviews.each do |review| %>
  <p> <%= review.text %> <%= link_to "Reviewed Movie", movie_path(review.movie_id) %></p>
  <% end %>
<% end %>
